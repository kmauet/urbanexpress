<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Invoices</h1>

  <table>
    <thead>
      <tr>
        <th>Rate</th>
        <th>Vehicule</th>
        <th>Rep</th>
        <th>Quote</th>
        <th>Customer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.rate %></td>
          <td><%= invoice.vehicule.try(:name) %></td>
          <td><%= invoice.sales_rep.try(:full_name) %></td>
          <td><%= "Quote# #{invoice.quote.id} for (#{invoice.quote.email})" %></td>
          <td><%= "#{invoice.customer.try(:full_name)} - (#{invoice.customer.try(:email)})" %></td>
          <td><%= link_to 'Show', invoice %></td>
          <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
          <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Invoice', new_invoice_path, class: "btn" %>
</div>