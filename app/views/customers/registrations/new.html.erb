<div class="container">
  <h2>Signup</h2>
  <!--Register-Form -->
  <div class="row">
    <div class="signup_wrap">
      <div class="col-md-6 col-sm-6">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :first_name, required: true, autofocus: true, input_html: { class: 'form-control' },  placeholder: "First Name*" %>
          </div>
          <div class="form-group">
            <%= f.input :last_name, required: true, autofocus: true, input_html: { class: 'form-control' }, placeholder: "Last Name*" %>
          </div>
          <div class="form-group">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, placeholder: "Email address*" %>
          </div>
          <div class="form-group">
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= recaptcha_tags %>
          </div>
          <div class="form-group">
            <%= f.button :submit, "Sign up",  input_html: { class: 'btn btn-block' }  %>
          </div>
        <% end %>
      </div>
      <div class="col-md-6 col-sm-6">
        <h6 class="gray_text">Login the Quick Way</h6>
        <a href="#" class="btn btn-block facebook-btn"><i class="fa fa-facebook-square" aria-hidden="true"></i> Login with Facebook</a> <a href="#" class="btn btn-block twitter-btn"><i class="fa fa-twitter-square" aria-hidden="true"></i> Login with Twitter</a> <a href="#" class="btn btn-block googleplus-btn"><i class="fa fa-google-plus-square" aria-hidden="true"></i> Login with Google+</a> </div>
      <div class="mid_divider"></div>
    </div>
  </div>
  <div class="modal-footer text-center">
    <p>Already got an account? <%- if controller_name != 'sessions' %>
  <%= link_to "Log in Here", new_session_path(resource_name) %><br />
<% end -%></p>
  </div>
  <!--/Register-Form --> 
</div>