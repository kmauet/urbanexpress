<%= simple_form_for(@customer , :url => customer_path(@customer)) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved: </h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :first_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
    </div>
    <div class="form-group">
      <%= f.input :last_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
    </div>
    <div class="form-group">
      <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
    </div>
    <div class="form-group">
      <%= f.input :phone_number, required: false, input_html: {class: "form-control white_bg"} %>
    </div>
    <div class="form-group">
      <%= f.input :active, input_html: {class: "form-control white_bg"} %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn' %>
  </div>  
<% end %>
