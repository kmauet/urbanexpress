<div class="container">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-md-6 col-sm-8">
          <%= f.input :email, required: false, autofocus: true, input_html: {class: "form-control white_bg"} %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-sm-8">
          <%= f.input :password, required: false, input_html: {class: "form-control white_bg"} %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-sm-8">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-8">
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>