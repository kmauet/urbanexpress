<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Service type</th>
      <th>Vehicule type</th>
      <th>Number of people</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.first_name %></td>
        <td><%= quote.last_name %></td>
        <td><%= quote.email %></td>
        <td><%= quote.phone_number %></td>
        <td><%= quote.service_type %></td>
        <td><%= quote.vehicule_type %></td>
        <td><%= quote.number_of_people %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
