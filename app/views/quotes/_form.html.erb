<%= simple_form_for(@quote) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :service_type %>
    <%= f.input :vehicule_type %>
    <%= f.input :num_of_passengers %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
