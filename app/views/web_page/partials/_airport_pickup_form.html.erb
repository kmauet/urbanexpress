<% #@quote.type = "AirportPickupQuote" %>
<%= simple_form_for(@airport_pickup_quote, url: create_quote_request_path(anchor: "1b"), method: :post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, as: :hidden %>
    <%= f.input :customer_id, as: :hidden %>
    
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.input :first_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :last_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.input :phone_number, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :departure_date, autofocus: true, as: :string,  input_html: {class: "form-control white_bg datepicker"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :airport, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.input :departure_time, autofocus: true, as: :string, input_html: {class: "form-control white_bg", :data =>{:provide => "timepicker"}} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :destination_address, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group  col-md-4">
        <%= f.input :flight_num, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group  col-md-3">
        <%= f.input :pay_method, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group  col-md-3">
        <%= f.input :additional_notes, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.button :submit, "Submit Quote"%>
    </div>

  </div>

<% end %>
