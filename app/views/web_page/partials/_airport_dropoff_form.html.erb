<%# @quote.type = "AirportDropoffQuote" %>
<%= simple_form_for(@airport_dropoff_quote, url: create_quote_request_path(anchor: "2b"), method: :post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, as: :hidden %>

    <div class="row">
      <div class="form-group col-md-4">
        <%= f.input :first_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :last_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.input :phone_number, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :departure_date, autofocus: true, as: :string,  input_html: {class: "form-control white_bg datepicker"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :airport, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.input :departure_time, autofocus: true, as: :string, input_html: {class: "form-control white_bg", :data =>{:provide => "timepicker"}} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :departure_address, autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :flight_num, :label => "flight number", autofocus: true, input_html: {class: "form-control white_bg"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-7">
        <%= f.input :additional_notes, autofocus: true, input_html: {class: "white_bg", :cols => 85, :rows => 8 } %>
      </div>
      <div class="form-group col-md-5">
        <div id="example2"></div>
        <br />
        <%= f.button :submit, "Submit Quote", id: "airport_dropoff_quote_submit" %>
      </div>
    </div>

  </div>

<% end %>
