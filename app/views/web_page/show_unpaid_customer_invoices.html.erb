<div class="container">
  <h2>Invoices Due</h2>
  <ul>
    <table class="table">
      <thead>
          <tr>
              <th>Date</th>
              <th>Invoice</th>
              <th>Amount</th>
          </tr>
      </thead>
      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.created_at.strftime("%m/%d/%Y") %></td>
            <td><%= link_to "invoice", show_unpaid_customer_invoice_path(invoice) %></td>
            <td><%= number_to_currency(invoice.rate, precision: 2) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </ul>
</div>