<!--Page Header-->
<section class="page-header profile_page">
  <div class="container">
    <div class="page-header_wrap">
      <div class="page-heading">
        <h1><%= @current_customer.full_name %></h1>
      </div>
      <ul class="coustom-breadcrumb">
        <li><a href="#">Home</a></li>
        <li>Profile</li>
      </ul>
    </div>
  </div>
  <!-- Dark Overlay-->
  <div class="dark-overlay"></div>
</section>
<!-- /Page Header--> 

<!--Profile-setting-->
<section class="user_profile inner_pages">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-3">
        <div class="profile_nav">
          <%= render 'web_page/partials/profile_sidemenu' %>
        </div>
      </div>
      <div class="col-md-6 col-sm-8">
        <div class="profile_wrap">
          <h5 class="uppercase underline">Genral Settings</h5>
          <%= simple_form_for(@current_customer, url: profile_settings_path, method: :patch) do |f| %>
            <%= f.error_notification %>
            <div class="form-group">
              <%= f.input :first_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
            </div>
            <div class="form-group">
              <%= f.input :last_name, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
            </div>
            <div class="form-group">
              <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control white_bg"} %>
            </div>
            
            <div class="form-group">
              <%= f.input :phone_number, required: false, autofocus: true, input_html: {class: "form-control white_bg"} %>
            </div>

            <!--<div class="gray-bg field-title">
              <h6>Social Links</h6>
            </div>
            <div class="form-group">
              <label class="control-label">Facebook ID</label>
              <input class="form-control white_bg" id="facebook" type="text">
            </div>
            <div class="form-group">
              <label class="control-label">Twitter ID</label>
              <input class="form-control white_bg" id="twitter" type="text">
            </div>
            <div class="form-group">
              <label class="control-label">Linkedin ID</label>
              <input class="form-control white_bg" id="linkedin" type="text">
            </div>
            <div class="form-group">
              <label class="control-label">Google+ ID</label>
              <input class="form-control white_bg" id="google" type="text">
            </div> -->
            <div class="form-group">
              <%= f.button :submit, "Save Changes"%>
            </div>
          <% end %>
        </div>
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(@current_customer), data: { confirm: "Are you sure?" }, method: :delete %></p>
        </section>
      </div>
    </div>
  </div>
  
<!--/Profile-setting--> 
