<!-- Services -->
<section id="our_services" class="dark-bg vc_row page-header">
  <div class=" col-md-6 vc_col section-padding">
      <div class="our_services white-text">
          <h2>Announcing our new Rewards Program!</h2>
          <p>Urban Express is happy to announce our new Rewards program for our valued customers. <%= link_to "Register",new_customer_registration_path %> with us and <%= link_to "Login", new_customer_session_path %> to access your reward points.</p>
          <div class="services_info">
              <div class="icon_box">
                  <i class="fa fa-money" aria-hidden="true"></i>
              </div>
              <h4>Earn points with every booking</h4>
              <p>With each booking, reward points will be added to your account.</p>
          </div>
          
          <div class="services_info">
              <div class="icon_box">
                  <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
              </div>
              <h4>Use earned points towards future bookings</h4>
              <p>You can redeem points by applying them towards a booking request.</p>
          </div>
      </div>
  </div>
  <div class=" col-md-4 section-padding">
      <div class="contact_form white-text">
        <h2>Contact Us</h2>
        <%= simple_form_for(@contact_us_quote, url: create_contact_us_quote_request_path(), method: :post) do |f| %>
          <%= f.error_notification %>
          <%= f.input :type, as: :hidden %>
          <div class="form-group" style="float:left;width:50%;padding-right:10px;">
            <%= f.input :first_name, required: true, input_html: {class: "form-control white_bg"} %>
          </div>
          <div class="form-group" style="float:left;width:50%;padding-left:10px;">
            <%= f.input :last_name, required: true, input_html: {class: "form-control white_bg"} %>
          </div>
          <div class="form-group" style="float:left;width:50%;padding-right:10px;">
            <%= f.input :email, required: true, input_html: {class: "form-control white_bg"} %>
          </div>
          <div class="form-group" style="float:left;width:50%;padding-left:10px;">
            <%= f.input :phone_number, input_html: {class: "form-control white_bg"} %>
          </div>
          <div class="form-group" style="clear:both;">
            <%= f.input :additional_notes, as: :text, input_html: {class: "white_bg", :cols => 40, :rows => 8 } %>
          </div>
          <div class="row">
            <div class="form-group col-md-8">
              <%= recaptcha_tags %>
            </div>
            <div class="form-group col-md-6">
              <%= f.button :submit, "Send Message"%>
            </div>
          </div>
        <% end %>
      </div>
  </div>
  <div class="dark-overlay" style="background: rgba(0, 0, 0, 0.3) none repeat scroll 0 0;"></div>
</section>
<!-- /Services -->


