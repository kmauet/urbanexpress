<!--Profile-setting-->
<section class="apply-job-section inner_pages">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-8">
        <div class="apply-job">
          <h5 class="uppercase underline">Apply for a Job</h5>
          <%= simple_form_for(@applicant, url: create_job_application_path, method: :post) do |f| %>
            <%= f.error_notification %>
            <div class="form-group">
              <%= f.input :first_name, required: true, input_html: {class: "form-control white_bg"} %>
            </div>
            <div class="form-group">
              <%= f.input :last_name, required: true, input_html: {class: "form-control white_bg"} %>
            </div>
            <div class="form-group">
              <%= f.input :email, required: true, input_html: {class: "form-control white_bg"} %>
            </div>
            
            <div class="form-group">
              <%= f.input :phone, required: true, input_html: {class: "form-control white_bg"} %>
            </div>
            <div class="form-group">
              <%= f.input :position, :as => :select, :collection => Applicant.positions.keys.to_a, input_html: {class: "form-control white_bg"} %>            </div>
            <div class="form-group">
              <%= f.file_field :resume, required: true, input_html: {class: "form-control white_bg"} %>
            </div>
            <div class="form-group">
              <%= f.input :note, required: false, input_html: {class: "form-control white_bg"} %>
            </div>
            <div class="form-group">
              <%= recaptcha_tags %>
            </div>
            <div class="form-group">
              <%= f.button :submit, "Submit"%>
            </div>
          <% end %>
        </div>
        </section>
      </div>
    </div>
  </div>
  
<!--/Profile-setting--> 
